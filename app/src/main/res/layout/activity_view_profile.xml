<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewProfile">

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Status:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Name:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Email:"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Address:"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Subjects:"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Description:"
        android:id="@+id/vpl_description_text_view"
        android:layout_above="@+id/vp_rate_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Rate:"
        android:id="@+id/vpl_rate_text_view"
        android:layout_below="@+id/vpl_description_text_view"
        android:layout_alignRight="@+id/vpl_description_text_view"
        android:layout_alignEnd="@+id/vpl_description_text_view" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="Total Hours:"
        android:id="@+id/vpl_hours_text_view"
        android:layout_below="@+id/vpl_rate_text_view"
        android:layout_alignRight="@+id/vpl_rate_text_view"
        android:layout_alignEnd="@+id/vpl_rate_text_view" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_status_text_view"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_name_text_view"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_email_text_view"
        android:layout_below="@+id/vp_name_text_view"
        android:layout_alignRight="@+id/vp_name_text_view"
        android:layout_alignEnd="@+id/vp_name_text_view" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_address_text_view"
        android:layout_below="@+id/vp_email_text_view"
        android:layout_alignRight="@+id/vp_email_text_view"
        android:layout_alignEnd="@+id/vp_email_text_view" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_subject_text_view"
        android:layout_below="@+id/vp_address_text_view"
        android:layout_alignRight="@+id/vp_address_text_view"
        android:layout_alignEnd="@+id/vp_address_text_view" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_description_text_view"
        android:layout_below="@+id/vp_subject_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_rate_text_view"
        android:layout_below="@+id/vp_description_text_view"
        android:layout_alignRight="@+id/vp_subject_text_view"
        android:layout_alignEnd="@+id/vp_subject_text_view" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:id="@+id/vp_hours_text_view"
        android:layout_alignBottom="@+id/vpl_hours_text_view"
        android:layout_alignRight="@+id/vp_rate_text_view"
        android:layout_alignEnd="@+id/vp_rate_text_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_to_list_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/vp_description_text_view"
        android:layout_toStartOf="@+id/vp_description_text_view"
        android:onClick="onBackClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/back_to_main_button"
        android:layout_alignTop="@+id/back_to_list_button"
        android:layout_toRightOf="@+id/back_to_list_button"
        android:layout_toEndOf="@+id/back_to_list_button"
        android:layout_marginLeft="151dp"
        android:layout_marginStart="151dp"
        android:onClick="onMainMenuClick" />
</RelativeLayout>
